<div class="message">
  <div class="message-name">
    <div  class="mes-name">
      <%= message.user.name %>
    </div>
    <div class="mes-date">
    <%= l message.created_at%>
    </div>
  </div>
  <div class="message-text">
    <div class="message-content">
      <%= message.content %>
    </div>
    <%=image_tag message.image.variant(resize: "500x500"), class: "message-image" if message.image.attached? %>
  </div>
</div>